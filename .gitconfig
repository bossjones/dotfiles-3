[user]
  email = {{ g.env.EMAIL or 'silas@sewell.org' }}
  name = Silas Sewell
  editor = vim
[core]
  whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol
[merge]
  tool = vimdiff
[color]
  diff = auto
  status = auto
  branch = auto
{% if version_gte(g.git.version, '1.7.4.2') %}
[push]
  default = simple
{% end %}
