#!/bin/bash

if [ -z $1 ]; then
  echo "Source path required."
  exit 1
else
  src_path="$1"
fi

if [ -z $2 ]; then
  echo "Destination path required."
  exit 1
else
  dst_path="$2"
fi

if [ -z $3 ]; then
  size="100x100"
else
  size="$3"
fi

IFS=$( echo -en "\n\b" )

for file_name in $( ls -1 "$src_path" ); do
  convert "$src_path/$file_name" -resize $size\> "$dst_path/$file_name"
done
