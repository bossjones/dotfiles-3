#!/usr/bin/env bash

git-dist-archive() {
  type="$1"
  tag="$2"
  name="$3"
  ext="$4"
  if [[ "$type" == "zip" ]]; then
    git archive --format=zip --prefix="${name}-${tag}/" "$tag" > "${name}-${tag}.${ext}"
  else
    git archive --format=tar --prefix="${name}-${tag}/" "$tag" | $type > "${name}-${tag}.${ext}"
  fi
} 

main() {
  name="$( basename "$( pwd )" )"
  case "$1" in
    "bzip2")
      git-dist-archive bzip2 "$2" "${3-$name}" "${4-tar.bz2}"
      ;;
    "gzip")
      git-dist-archive gzip "$2" "${3-$name}" "${4-tar.gz}"
      ;;
    "zip")
      git-dist-archive zip "$2" "${3-$name}" "${4-zip}"
      ;;
    *)
      echo "Unknown type: $1"
      return 1
      ;;
  esac
}

main $@
