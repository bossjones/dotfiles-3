export NODEHUB_LOCAL_MODE='true'
export GOROOT="$HOME/src/go"

extend_path "$HOME/src/brpm/scripts"
extend_path "$HOME/src/go/bin"
extend_path "$HOME/src/huck/scripts"

extend_python_path "$HOME/src/brpm"
extend_python_path "$HOME/src/django-haystack"
extend_python_path "$HOME/src/django-json-rpc"
extend_python_path "$HOME/src/huck"
extend_python_path "$HOME/src/nodehub"
extend_python_path "$HOME/src/ops"
extend_python_path "$HOME/src/twistdev"
extend_python_path "$HOME/src/txldap"
extend_python_path "$HOME/src/validictory"

export FAB_USER="ssewell"

alias djrun='djmanage runserver'
alias djtest='djmanage test'
alias ndrun='node srv/server.js'
alias mongod='sudo /etc/init.d/mongod'
alias plrun='plovr serve gui.js'
alias plovr="java -jar $HOME/.local/lib/plovr.jar"

djmanage() {
  name="$( basename $PWD )"

  if [[ -f "./manage.py" ]]; then
    python "./manage.py" $@
  elif [[ -f "$name/manage.py" ]]; then
    python "$name/manage.py" $@
  else
    echo "Can't find manage.py"
  fi
}
